<!DOCTYPE html>
<link rel="stylesheet" type="text/css" href="/css/bookhome.css"></link>

<div class="ui grid book-box">
  <div class="row link-row">
    <div class="left floated left aligned eight wide column modify-container">
      <div class="modify-box">
        <a href="/regModify">資料更改</a>
      </div>
    </div>
    <div class="right floated right aligned eight wide column logout-container">
      <div class="logout-box">
        <a>登出</a>
      </div>
    </div>
  </div>
  <div class="row bookcontent-row">
    <div class="fourteen wide column centered">
      <form id="book_form" action="/" method="post">
        <div class="ui grid one column">
          <div class="column img-box">
            <div class="book-circular">
              <input type="file" class="file" accept=".png, .jpg, .jpeg" name="photo">
              <img src="/img/user/{{user.photo}}">
            </div>  
        </div>

        <div class="column name-box">
          <h2>{{user.name}}</h2>
        </div>
        <div class="column select-box">
          <select form="book_form" name="shop" class="select-styled">
            <option value="" selected>選擇店家</option>
            {{#each shopList}}
            <option value={{.}}>{{.}}</option>
            {{/each}}
          </select>
          <div class="error-box">
            <label>*請選擇店家</label>
          </div>
        </div>

        <div class="column select-box">
          <select form="book_form" name="types" class="select-styled">
            <option value="" selected="selected">選擇種類</option>
          </select>
          <div class="error-box">
            <label>*請選擇種類</label>
          </div>
        </div>
        <div class="column select-box">
          <select form="book_form" name="cloth" class="select-styled">
            <option value="" selected="selected">選擇布料</option>
          </select>
          <div class="error-box">
            <label>*請選擇布料</label>
          </div>
        </div>

        <div class="column phone-box">
          <input class="uppercase" type="text" form="book_form" name="phone" placeholder="輸入聯絡電話" value="{{user.phone}}"></input>
          <div class="error-box">
            <label>*請輸入電話號碼，如：0999-111-111</label>
          </div>
        </div>

        <div class="column book-btn-box">
          <input type="submit" class="uppercase" name="book-button" form="book_form" value="訂製西裝">
        </div>
      </form>
    </div>
  </div>
  <div id="photo_succ_pop_up">
    <div class="main-photo-succ">
      <p>修改成功</p>
    </div>
    <div class="content-photo-succ">
      <p>修改已成功，請重新登入！</p>
    </div>
    <div class="image-photo-succ">
      <img id="succ-icon" src="/img/login_page/refresh-36.png">
    </div>
  </div>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-serialize-object/2.5.0/jquery.serialize-object.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.15.0/jquery.validate.min.js"></script>
  <script src="/js/bookhome.js"></script>
</div>
